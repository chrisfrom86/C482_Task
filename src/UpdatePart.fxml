<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane maxHeight="-Infinity" maxWidth="-Infinity"
          minHeight="-Infinity" minWidth="-Infinity"
          prefHeight="295.0" prefWidth="450.0"
          xmlns="http://javafx.com/javafx/11.0.1"
          xmlns:fx="http://javafx.com/fxml/1" fx:controller="UpdatePart">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints maxHeight="129.0" minHeight="0.0" prefHeight="42.0" vgrow="SOMETIMES" />
        <RowConstraints maxHeight="328.0" minHeight="10.0" prefHeight="211.0" vgrow="SOMETIMES" />
        <RowConstraints maxHeight="127.0" minHeight="10.0" prefHeight="42.0" vgrow="SOMETIMES" />
    </rowConstraints>
    <children>
        <VBox prefHeight="200.0" prefWidth="100.0" spacing="6.0" GridPane.rowIndex="1">
            <children>
                <HBox alignment="CENTER_RIGHT" prefHeight="29.0" prefWidth="150.0" spacing="15.0">
                    <children>
                        <Label text="ID" />
                        <TextField fx:id="partIDText" disable="true" onAction="#onAddPartID" prefHeight="25.0" prefWidth="103.0" promptText="Auto-generated" />
                    </children>
                    <padding>
                        <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
                    </padding>
                </HBox>
                <HBox alignment="CENTER_RIGHT" layoutX="10.0" layoutY="10.0" prefHeight="29.0" prefWidth="150.0" spacing="15.0">
                    <children>
                        <Label text="Name" />
                        <TextField fx:id="partNameText" onAction="#onAddPartName" prefHeight="25.0" prefWidth="103.0" />
                    </children>
                    <padding>
                        <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
                    </padding>
                </HBox>
                <HBox alignment="CENTER_RIGHT" layoutX="10.0" layoutY="39.0" prefHeight="29.0" prefWidth="150.0" spacing="15.0">
                    <children>
                        <Label text="Inventory" />
                        <TextField fx:id="partInventoryText" onAction="#onAddPartInventory" prefHeight="25.0" prefWidth="103.0" />
                    </children>
                    <padding>
                        <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
                    </padding>
                </HBox>
                <HBox alignment="CENTER_RIGHT" layoutX="10.0" layoutY="68.0" prefHeight="29.0" prefWidth="150.0" spacing="15.0">
                    <children>
                        <Label text="Price/Cost" />
                        <TextField fx:id="partPriceText" onAction="#onAddPartPrice" prefHeight="25.0" prefWidth="103.0" />
                    </children>
                    <padding>
                        <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
                    </padding>
                </HBox>
                <HBox alignment="CENTER_RIGHT" layoutX="10.0" layoutY="97.0" prefHeight="29.0" prefWidth="150.0" spacing="15.0">
                    <children>
                        <Label text="Max" />
                        <TextField fx:id="partMaxText" onAction="#onAddPartMax" prefHeight="25.0" prefWidth="103.0" />
                    </children>
                    <padding>
                        <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
                    </padding>
                </HBox>
                <HBox alignment="CENTER_RIGHT" layoutX="10.0" layoutY="126.0" prefHeight="29.0" prefWidth="150.0" spacing="15.0">
                    <children>
                        <Label fx:id="machineIDLabel" text="Machine ID" />
                        <TextField fx:id="partMachineIDText" onAction="#onAddMachineID" prefHeight="25.0" prefWidth="103.0" />
                    </children>
                    <padding>
                        <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
                    </padding>
                </HBox>
            </children>
            <padding>
                <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
            </padding>
        </VBox>
        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="12.0" GridPane.columnIndex="1">
            <children>
                <RadioButton fx:id="partInHouseRadioButton" mnemonicParsing="false" onAction="#onPartInHouseRadioButton" selected="true" text="In-House">
                    <toggleGroup>
                        <ToggleGroup fx:id="partSourceToggleGroup" />
                    </toggleGroup></RadioButton>
                <RadioButton fx:id="partOutsourcedRadioButton" mnemonicParsing="false" onAction="#onPartOutsourcedRadioButton" text="Outsourced" toggleGroup="$partSourceToggleGroup" />
            </children>
            <GridPane.margin>
                <Insets />
            </GridPane.margin>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </HBox>
        <Label fx:id="addPartFormLabel" text="Add Part" GridPane.halignment="CENTER" GridPane.valignment="CENTER">
            <font>
                <Font size="18.0" />
            </font>
        </Label>
        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="15.0" GridPane.columnIndex="1" GridPane.rowIndex="2">
            <children>
                <Button fx:id="partSave" mnemonicParsing="false" onAction="#onPartSave" text="Save" />
                <Button fx:id="partCancel" mnemonicParsing="false" onAction="#onPartCancel" text="Cancel" />
            </children>
            <padding>
                <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
            </padding>
        </HBox>
        <VBox prefHeight="200.0" prefWidth="100.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
            <children>
                <HBox layoutX="10.0" layoutY="10.0" prefHeight="181.0" prefWidth="204.0">
               <children>
                  <Label fx:id="errorLabel" />
               </children></HBox>
                <HBox alignment="CENTER_LEFT" prefHeight="30.0" prefWidth="204.0" spacing="15.0">
                    <children>
                        <Label text="Min" />
                        <TextField fx:id="partMinText" onAction="#onAddPartMin" prefHeight="25.0" prefWidth="103.0" />
                    </children>
                    <opaqueInsets>
                        <Insets />
                    </opaqueInsets>
                    <padding>
                        <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
                    </padding>
                </HBox>
                <HBox layoutX="10.0" layoutY="10.0" prefHeight="76.0" prefWidth="204.0" />
            </children>
        </VBox>
    </children>
</GridPane>
